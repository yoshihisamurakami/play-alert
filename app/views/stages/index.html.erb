
<div class="signup">
  <% if !logged_in? %>
    <%= link_to "新規ユーザー登録", signup_path, class: "btn btn-info" %>
  <% end %>
</div>

<%= render 'counter' %>

<%= @debug %>

<%= link_to "上演中", stages_playing_path %> | 
<%= link_to "今週〜", stages_thisweek_path %> | 
<%= link_to "来週以降〜", stages_later_path %>

<div id="stagelist_area">
<% keydate = '' %>
<% @stages.each do |stage| %>
<%   if keydate != stage.startdate %>
    <div class="stagelist-title<%= " nowplaying" if stage.startdate <= Date.today %>"><%= datejapan(stage.startdate) %></div>
    <% keydate = stage.startdate %>
<%   end %>
    <%= render 'stage', stage: stage %>
<% end %>
</div>
<br>
<div style="text-align: center;" id="loading"></div>
<div style="display: none" id="pages"></div>