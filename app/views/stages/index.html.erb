
<%= render 'counter' %>

<% keydate = '' %>
<% @stages.each do |stage| %>
<%   if keydate != stage.startdate %>
    <div class="stagelist-title">
      <%= datejapan(stage.startdate) %>
    </div>
    <%  keydate = stage.startdate %>
<%   end %>
    <div class="stage-choice" data-choice="<%= stage_path(stage.id) %>">
      <span class="stage-title"><%= stage.title %></span>&nbsp;&nbsp;
      <span style="font-size:1em; color: #444;"><%= stage.group %></span><br>
      <div style="font-size:1em; color: #999;">
        <%= datejapan_short(stage.startdate) %>ï½ž <%= datejapan_short(stage.enddate) %>&nbsp;&nbsp;
        <%= stage.theater %>&nbsp;&nbsp;
        <div style="text-align: right">
          <span><%= link_to "", root_path, class: "glyphicon glyphicon-star-empty icon-link" %></span>
          <span><%= link_to "", root_path, class: "glyphicon glyphicon-envelope icon-link-mail" %></span>
        </div>
      </div>
    </div>
      
<% end %>

<%= render 'counter' %>

<div style="text-align: center">
<%= paginate @stages %>
</div>